BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        size_hint: (1, 0.1)
        TextInput:
            id: workspace
            readonly: True
            focus: False
            cursor_blink: False
            background_color: 1, 1, 1, 1
            foreground_color: 0, 0, 0, 1
            halign: 'right'
            valign: 'center'
            font_size: '30sp'
            text: ''
    BoxLayout:
        size_hint: (1, 0.7)
        orientation: 'horizontal'
        BoxLayout: # Números
            size_hint: (0.8, 1)
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    on_release:
                        app.bt_number_click('7')
                    font_size: '20sp'
                    bold: True
                    text: '7'
                Button:
                    on_release:
                        app.bt_number_click('8')
                    font_size: '20sp'
                    bold: True
                    text: '8'
                Button:
                    on_release:
                        app.bt_number_click('9')
                    font_size: '20sp'
                    bold: True
                    text: '9'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    on_release:
                        app.bt_number_click('4')
                    font_size: '20sp'
                    bold: True
                    text: '4'
                Button:
                    on_release:
                        app.bt_number_click('5')
                    font_size: '20sp'
                    bold: True
                    text: '5'
                Button:
                    on_release:
                        app.bt_number_click('6')
                    font_size: '20sp'
                    bold: True
                    text: '6'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    on_release:
                        app.bt_number_click('1')
                    font_size: '20sp'
                    bold: True
                    text: '1'
                Button:
                    on_release:
                        app.bt_number_click('2')
                    font_size: '20sp'
                    bold: True
                    text: '2'
                Button:
                    on_release:
                        app.bt_number_click('3')
                    font_size: '20sp'
                    bold: True
                    text: '3'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    on_release:
                        app.bt_number_click('0')
                    font_size: '20sp'
                    bold: True
                    text: '0'
                Button:
                    on_release:
                        app.bt_action_click(workspace.text, "=")
                    font_size: '20sp'
                    bold: True
                    text: '='
                Button:
                    on_release:
                        app.bt_clear_click()
                    font_size: '20sp'
                    bold: True
                    text: 'C'
        BoxLayout: # Operações.
            size_hint: (0.2, 1)
            orientation: 'vertical'
            Button:
                on_release:
                    app.bt_action_click(workspace.text, "+")
                font_size: '20sp'
                bold: True
                text: '+'
                size_hint: (1, 1)
            Button:
                on_release:
                    app.bt_action_click(workspace.text, "-")
                font_size: '20sp'
                bold: True
                text: '-'
                size_hint: (1, 1)
            Button:
                on_release:
                    app.bt_action_click(workspace.text, "*")
                font_size: '20sp'
                bold: True
                text: '*'
                size_hint: (1, 1)
            Button:
                on_release:
                    app.bt_action_click(workspace.text, "/")
                font_size: '20sp'
                bold: True
                text: '/'
                size_hint: (1, 1)